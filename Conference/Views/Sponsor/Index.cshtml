@model IEnumerable<Conference.Domain.Entities.Sponsors>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-6">
            <div class="item">
                <div class="details">
                    <a asp-controller="sponsor" asp-action="details" asp-route-id="@item.Id">@item.Id @item.Name</a>
                    <span class="position">@item.Id, @item.Name</span>
                </div>
            </div>
            @if (item.Name == "Microsoft")
            {
                <img src="~/image/microsoft.jpg" class="photo" />
            }


        </div>
    }
</div>

</div>